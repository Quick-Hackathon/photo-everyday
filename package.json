{
  "name": "photo-everyday",
  "homepage": ".",
  "main": "app/main.js",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "yarn webpack:build && yarn electron:build",
    "build:linux": "yarn webpack:build && yarn electron:build:linux",
    "build:mac": "yarn webpack:build && yarn electron:build:mac",
    "build:win": "yarn webpack:build && yarn electron:build:win",
    "electron:watch": "electron app/main.js",
    "electron:build": "node app-build/build.js",
    "electron:build:linux": "node app-build/build.js --platform=linux",
    "electron:build:mac": "node app-build/build.js --platform=darwin",
    "electron:build:win": "node app-build/build.js --platform=win32",
    "webpack:watch": "BROWSER=none react-scripts start",
    "webpack:build": "react-scripts build",
    "precommit": "lint-staged"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "electron": "^3.0.4",
    "electron-builder": "^20.28.4",
    "electron-devtools-installer": "^2.2.4",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "minimist": "^1.2.0",
    "node-sass": "^4.9.3",
    "prettier": "^1.14.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-scripts": "2.0.4",
    "react-redux": "^5.0.7",
    "redux": "^4.0.1"
  },
  "dependencies": {
    "electron-is-dev": "^1.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
